
<h1>Payment Results</h1>


<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= sprintf("%.2f%%", @apr * 100) %>
  </dd>

  <dt>
    N
  </dt>
  <dd>
    <%= @n %>
  </dd>

  <dt>
    PV
  </dt>
  <dd>
    <%= @pv.to_fs(:currency, {:precision => 2}) %>
  </dd>


  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_fs(:currency, {:precision => 2})%>
  </dd>
</dl>


<a href="/payment/new">
  Calculate another payment
</a>
